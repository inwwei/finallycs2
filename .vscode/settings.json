{
    "eslint.validate": [
        {
            "language": "vue",
            "autoFix": true
        },
        {
            "language": "javascript",
            "autoFix": true
        },
        {
            "language": "javascriptreact",
            "autoFix": true
        }
    ],
    "eslint.autoFixOnSave": true,
    "editor.formatOnSave": false,
    "vetur.validation.template": true,
    "prettier.semi": false,
    "prettier.singleQuote": true,
    "prettier.useTabs": true,
    "[php]": {
        "editor.rulers": [
            80,
            120
        ],
    },
    "[vue]": {
        "editor.formatOnSave": false
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
}
